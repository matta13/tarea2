# En ./api/Dockerfile

FROM python:3.11-slim

WORKDIR /app

# ‚ö†Ô∏è CLAVE: Instalar tools de DB y Netcat para la espera activa
RUN apt-get update && apt-get install -y netcat-openbsd postgresql-client && rm -rf /var/lib/apt/lists/*

# Copiar e instalar dependencias Python
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copiar el c√≥digo fuente (main.py y .env.api est√°n en este contexto)
COPY . /app 

# üö® El CMD es sobrescrito por docker-compose.yml con la l√≥gica de espera üö®
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]

